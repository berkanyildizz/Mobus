<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addyolcu">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="242dp"
        android:layout_height="197dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni yolcu"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <EditText
        android:id="@+id/adgirdi"
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Ad Soyad"
        android:layout_marginTop="15dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/koltukno"
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Koltuk no"
        android:layout_marginTop="25dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adgirdi" />

    <EditText
        android:id="@+id/sefer"
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Sefer No"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/koltukno" />

    <EditText
        android:id="@+id/nereden"
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Nereden"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sefer" />

    <EditText
        android:id="@+id/nereye"
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Nereye"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nereden" />

    <Button
        android:id="@+id/yolcufireekle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/nereye"
        app:layout_constraintTop_toBottomOf="@+id/nereye" />

    <Button
        android:id="@+id/yolcuekletomenu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Ä°ptal"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/nereye"
        app:layout_constraintTop_toBottomOf="@+id/nereye" />


</androidx.constraintlayout.widget.ConstraintLayout>